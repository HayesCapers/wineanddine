extends layout

block styles
	link(rel="stylesheet" href='stylesheets/bootstrap.min.css')
	link(rel="stylesheet" type="text/css" href="stylesheets/beverages.css")

block scripts
	scripts(type='text/javascript' src='javascripts/scripts.js')

block content

	include slider

	-if (sessionInfo !== true)
		include logreg

	.toggle-button

	#site

		.container.section.active
			.row.text-center
				.header.col-sm-12.text-center
					h1 Wine Recommendations	
				.col-sm-12
					- for(let i = 0; i < wineArray.wines.length; i++)
						div.wine-results.col-sm-5
							a(href=wineArray.wines[i].link)
								img.wine-pic(src= wineArray.wines[i].image)
							br
							div.wine-name #{wineArray.wines[i].name}
							br
							div
								strong Vintage: 
								span #{wineArray.wines[i].vintage}
							div
								strong Variety: 
								span #{wineArray.wines[i].varietal}
							div
								strong Price: $
								span #{wineArray.wines[i].price}
							div
								strong Rank: 
								span #{wineArray.wines[i].snoothrank} /5
							div
								strong Recipe Pairing ID: 
								span #{wineArray.wines[i].winery_id}
							br
					